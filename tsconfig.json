{
  "extends": "astro/tsconfigs/strictest",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "paths": {
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"]
    },
    "verbatimModuleSyntax": true
  },
  "plugins": [
    {
      "name": "@astrojs/ts-plugin"
    }
  ]
}
